extends(src='layout.sgr')
  block(name='pagemeta')
    meta(name='description' content='{{ dato.home_page[0].seoHome.description }}')

  block(name='title')
    title {{ dato.home_page[0].seoHome.title + ' | ' + dato._meta.globalSeo.siteName }}

  block(name='content')
    #hero
      #heroContent
        h1 {{{ marked(dato.home_page[0].headerTitle) }}}
      #heroImage
        picture
          source(type='image/webp'
            srcset='https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=webp&w=2000&fit=fill 2000w,
            https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=webp&w=1500&fit=fill 1500w,
            https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=webp&w=900 900w,
            https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=webp&w=450 450w')
          img(src='https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=jpg&w=900&fit=fill'
            srcset='https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=jpg&w=2000&fit=fill 2000w,
            https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=jpg&w=1500&fit=fill 1500w,
            https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=jpg&w=900 900w,
            https://{{ dato._meta.imgixHost + dato.home_page[0].heroImage.path }}?fm=jpg&w=450 450w'
            alt='{{ dato.home_page[0].heroImage.alt }}')

    #whatToExpect.g-imageBg
      .g-wrapper
        .what-to-expect-content
          h2 {{ dato.home_page[0].introTitle }}
          .expectContent
            | {{{ marked(dato.home_page[0].introDetail) }}}

    #howWeHelp
      h2 How we help
      .service-container.g-wrapper
        .g-background
        each(loop='service of dato.service.sort((a, b) => a.position < b.position ? -1 : 1 )')
          .service-card
            .service-card__image
              img(src='https://{{ dato._meta.imgixHost + service.serviceIcon.path }}' alt='{{ service.serviceName }} icon')
            .service-card__content
              h3 {{ service.serviceName }}
              hr
              p {{ service.homepageServiceDescription }}
            a.g-button(href='/how-we-help#{{{ slugify(service.serviceName) }}}') {{ service.homepageButtonText }}

    #meetTheTeam
      h2 Meet the team
      .s-team-carousel.g-wrapper
        each(loop='teamMember of dato.team.sort((a, b) => a.position < b.position ? -1 : 1)')
          .s-team-carousel-member(id='{{{ slugify(teamMember.name )}}}')
            .s-team-carousel-member__avatar
              picture
                source(type='image/webp'
                  srcset='https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=2000&h=2000&fm=webp 2000w,
                  https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=1500&h=1500&fm=webp 1500w,
                  https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=900&h=900&fm=webp 900w,
                  https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=200&h=200&fm=webp 450w')
                img(src='https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=900&h=900&fm=png'
                  srcset='https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=2000&h=2000&fm=png 2000w,
                  https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=1500&h=1500&fm=png 1500w,
                  https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=900&h=900&fm=png 900w,
                  https://{{ dato._meta.imgixHost + teamMember.avatar.path }}?fit=facearea&facepad=9&mask=ellipse&w=450&h=450&fm=png 450w'
                  alt='{{ teamMember.avatar.alt }}')
            .s-team-carousel-member__content
              h3.s-team-carousel-member__name {{ teamMember.name }}, {{ teamMember.educationTitle }}
              p.s-team-carousel-member__jobTitle {{ teamMember.jobTitle }}
              .s-team-carousel-member__bio
                | {{{ marked(teamMember.shortBio) }}}
              a(href='/meet-our-team#{{{ slugify(teamMember.name)}}}') Read more &rarr;
      .g-center
        a.g-button(id='nextTeamMember') Next team member &rarr;

    #eventsPreview.g-imageBg
      h2 Events & Talks
      .events-container.g-wrapper
        if(condition="dato.event_type.length > 0")
          each(loop='eventType of dato.event_type')
            .events-card
              //- .events-card__image
              //-   img(src="https://{{ dato._meta.imgixHost + eventType.eventImage.path }}?w=500" alt="{{ eventType.eventImage.alt }}")
              .events-card__content
                h3 {{ eventType.eventTitle }}
                hr
                p {{ eventType.eventDescription.split(' ').slice(0, 35).join(' ') }}â€¦
                a.g-button(href='/upcoming-events#{{{ slugify(eventType.eventTitle) }}}') Read more &rarr;
                //- hr
                //- each(loop='event of dato.event_occurence.filter((event) => event.eventType.id === eventType.id)')
                //-   if(condition="event.eventDate")
                //-     p {{{ formatDate(event.eventDate) }}}
                //-   else
                //-     p Date to be determined
                //-   address.g-address {{ event.eventLocation.address }}
        else
          .events-card
            h3 No events scheduled
            p
              Check back soon, or
              a(href="/get-in-touch")get in touch.

    include(src='includes/_cta.sgr')
