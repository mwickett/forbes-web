extends(src='layout.sgr')
  block(name='content')
    .events-page-wapper
      each(loop='event of contentful.events')
        .event(id='{{{ slugify(event.fields.eventTitle) }}}')
          h3 {{ event.fields.eventTitle }}
          time {{{ formatDate(event.fields.dateTime) }}}
          p {{ event.fields.location.address }}
          h5 Description
          p {{{ marked(event.fields.eventDescription) }}}

          // Event specific image?

    include(src='includes/_cta.sgr')
