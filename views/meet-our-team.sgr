extends(src='layout.sgr')
  block(name='content')
    each(loop='team of contentful.team')
      h3 {{ team.fields.name }}, {{ team.fields.educationTitle }}
      p {{{ marked(team.fields.fullBio) }}}
      picture
        source(type='image/webp' srcset='{{ team.fields.avatar.fields.file.url }}?fm=webp&w=2000 2000w, {{ team.fields.avatar.fields.file.url }}?fm=webp&w=1500 1500w, {{ team.fields.avatar.fields.file.url }}?fm=webp&w=900 900w, {{ team.fields.avatar.fields.file.url }}?fm=webp&w=450 450w')
        img(src='{{ team.fields.avatar.fields.file.url }}?fm=jpg&w=900' srcset='{{ team.fields.avatar.fields.file.url }}?fm=jpg&w=2000 2000w, {{ team.fields.avatar.fields.file.url }}?fm=jpg&w=1500 1500w, {{ team.fields.avatar.fields.file.url }}?fm=jpg&w=900 900w, {{ team.fields.avatar.fields.file.url }}?fm=jpg&w=450 450w' alt='{{ team.fields.name }}, {{ team.fields.educationTitle }}')
