#footer
  background-color: var(--brandGrey)
  color: white
  display: flex
  width: 100%
  justify-content: space-between
  padding: 2em 8em
  flex-wrap: wrap

  & h5
    color: white
    font-weight: 200

  & a
    color: white
    text-decoration: none

  & ul
    list-style: none
    padding-left: 0
    font-size: 0.7em

    & li
      margin-bottom: 1.2em

  &.footer-item
    flex: 1 1 auto
